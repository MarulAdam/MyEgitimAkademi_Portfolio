@model List<MyEgitimAkademi_Portfolio.Models.Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmet Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Hizmet ID</th>
        <th>Hizmet Adı</th>
        <th>Hizmet Sil</th>
        <th>Hizmet Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.ServiceName</td>
            <td><a onclick="myFunction(@item.ServiceID.ToString())" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Service/AddService/" class="btn btn-outline-primary">Yeni Hizmet Girişi</a>

<script>
    function myFunction(id) {
        let text = "Hizmeti silmek istediğine emin misin ?";
        if (confirm(text) == true) {
            location.href = "/Service/DeleteService/" + id;
        } else {
        }
    }
</script>
