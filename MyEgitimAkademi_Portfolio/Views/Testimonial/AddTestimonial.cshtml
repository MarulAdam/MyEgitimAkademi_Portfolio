
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Referans Ekeleme Sayfası</h2>

<form method="post">
    <label>Referans Adı</label>
    <input type="text" name="NameSurname" class="form-control" />
    <br />
    <label>Referans Ünvan</label>
    <input type="text" name="Title" class="form-control" />
    <br />
    <label>Referans Görseli</label>
    <input type="text" name="ImageUrl" class="form-control" />
    <br />
    <label>Referans Yorumu</label>
    <textarea rows="5" name="Comment" class="form-control" ></textarea>
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>

